<%- include('./iniciar-sesion')-%>
<body>
    <div class="container mt-3">

        <div class="container text-center">
            <div class="row">
              <div class="col-8">
                <h1>Bienvenido <%=usuario.nombre%></h1>
              </div>
              <div class="col">
                <form action="/logout" method="post">
                    <button class="btn btn-danger mt-3 mb-5" >Cerrar sesion</button>
                </form>
              </div>
            </div>
          </div>    

        <div class="jumbotron">
            <h1 style="color:black mt-3;"></h1>
            <br/>

            <form action="/productos" method="post">

                <div class="form-group">
                    <label for="nombre"><b>Nombre</b></label>
                    <input type="text" id="nombre" class="form-control" name="nombre">
                </div>

                <div class="form-group">
                    <label for="precio"><b>Precio</b></label>
                    <input type="number" id="precio" class="form-control" name="precio">
                </div>

                <div class="form-group">
                    <label for="imagen"><b>Imagen</b></label>
                    <input type="url" id="imagen" class="form-control" name="imagen">
                </div>

                <div class="form-group">
                    <label for="cantidad"><b>Cantidad</b></label>
                    <input type="number" id="cantidad" class="form-control" name="cantidad">
                </div>

                <button class="btn btn-success mt-3 mb-5" >Enviar</button>
            </form>

            <h2 style="color:blue;">Historial de Productos</h2> 
            <%- include('./tabla')-%>
            
        </div> 
    </div>
</body>

